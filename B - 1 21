#include <stdio.h>
#include <string.h>

int main(void){
  int s=0;
  char a[20], b[10];
  scanf("%s %s", a, b);
  int a_size = strlen(a);
  int b_size = strlen(b);
  for(int i=0; i<a_size+b_size; i++){
    s *= 10;
    if(i<a_size){
      s += a[i] - '0';
    }
    else{
      s += b[i - a_size] - '0';
    }
  }
  for(int j=0; j<10001; j++){
    if(j*j == s){
      printf("%s", "Yes");
      break;
    }
    else if(j==10000){
      printf("%s", "No");
    }
  }
  return 0;
}
