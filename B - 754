#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main(void){
  char s[15];
  scanf("%s", s);
  
  int N = strlen(s), n, d, diff_min = 100000;
    
  for(int i=0; i<N-2; i++){
    n = 0;
    for(int j=0; j<3; j++){
      n = n * 10 + (s[i + j] - '0');
    }
    d = abs(753 - n);
    if(d < diff_min) diff_min = d;
  }
  printf("%d", diff_min);
  return 0;
}
