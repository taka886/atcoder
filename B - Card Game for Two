#include <stdio.h>

int main(void){
  int N, a[105], t, s=0;
  scanf("%d", &N);
  for(int i=0; i<N; i++){
    scanf("%d", &a[i]);
  }
  for(int i=0; i<N; i++){
    for(int j=i+1; j<N; j++){
      if(a[j]>a[i]){
        t = a[i];
        a[i] = a[j];
        a[j] = t;
      } 
    }
  }
  for(int k=0; k<N; k+=2){
    if(k==N-1) s += a[k];
    else s += a[k] - a[k+1];
  }
  printf("%d", s);
  return 0;
}
