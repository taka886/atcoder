#include <stdio.h>

int p[1000005]={0};

int main(void){
  
  int s;
  scanf("%d", &s);
  p[s] = 1;
  
  for(int i=2; i<1000005; i++){
    if(s%2==0){
      s /= 2;
    }
    else{
      s = 3*s + 1;
    }
    if(p[s]==0) p[s] = 1;
    else{
      printf("%d", i);
      break;
    }
  }
  
  return 0;
}
