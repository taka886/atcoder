#include <stdio.h>
#include <stdlib.h>

int cmp_double(const void *a, const void *b){
  
  double x = *(double *)a;
  double y = *(double *)b;
  
  if(x-y>0) return 1;
  else if(x-y<0) return -1;
  return 0;
}

int main(void){
  double v[60], a;
  int N, t;
  scanf("%d", &N);
  
  for(int i=0; i<N; i++){
    scanf("%lf", &v[i]);
  }
  
  qsort(v, N, sizeof(double), cmp_double);
  
  for(int j=0; j<N-1; j++){
    t = j;
    a = (v[t]+v[t+1]) / 2.0;
    v[t+1] = a;
  }
  printf("%lf", v[N-1]);
  
  return 0;
}
