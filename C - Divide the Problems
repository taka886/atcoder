#include <stdio.h>
#include <stdlib.h>

int cmp_int(const void *a, const void *b){

  int x = *(int *)a;
  int y = *(int *)b;
  
  return x-y;
}

int main(void){
  int N, d[100005], key;
  scanf("%d", &N);
  
  for(int i=0; i<N; i++){
    scanf("%d", &d[i]);
  }
  
  qsort(d, N, sizeof(int), cmp_int);
  
  if(N%2==1) printf("%d", 0);
  
  else{
    key = N/2;
    printf("%d", d[key]-d[key-1]);
  }
  return 0;
}
