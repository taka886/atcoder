#include <stdio.h>
#include <string.h>
#include <stdlib.h>

  char s[300005], t[300005];
  char s_adv[300005], t_adv[300005]; // Aを除いた文字列
int main(void){
  long long ls, lt, lls=0, llt=0, min=0;
  int a[300005]={0}, b[300005]={0}; // Aの区間でのカウント
  scanf("%s %s", s, t);
  ls = strlen(s);
  lt = strlen(t);
  
  
  for(int i=0; i<ls; i++){
    if(s[i] != 'A'){
      s_adv[lls] = s[i];
      lls++;
    }
    else a[lls] += 1;
  }

  for(int i=0; i<lt; i++){
    if(t[i] != 'A'){
      t_adv[llt] = t[i];
      llt++;
    }
    else b[llt] += 1;
  }

  if(lls == llt){
    for(int i=0; i<=lls; i++){
      if(s_adv[i] != t_adv[i]){
        printf("%d", -1);
        return 0;
      }
    }
    for(int i=0; i<=lls; i++){
      min += abs(a[i] - b[i]);
    }
    printf("%lld", min);
  }
  else printf("%d", -1);
  return 0;
}
