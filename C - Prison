#include <stdio.h>

int main(void){
  int N, M, l, r, max_l=0, min_r=100005;
  scanf("%d %d", &N, &M);
  for(int i=0; i<M; i++){
    scanf("%d %d", &l, &r);
    if(max_l<l) max_l = l;
    if(min_r>r) min_r = r;
  }
  if(min_r >= max_l) printf("%d", min_r - max_l + 1);
  else printf("%d", 0);
  return 0;
}
